.coupon{ 
  position: relative;
  width: 94%; 
  margin:2% 0 0 3%;
  height: 220rpx;
  font-size:3vw;
  color: #999;
  }
.couponImg{
  width: 100%; 
  height: 220rpx;
}
.cont{
  position: absolute; 
  top: 1%; 
  left: 1.3%; 
  width: 97%; 
  }
.contMoney{
  width: 19%; 
  float: left;
  margin-top: 50rpx;
  text-align: center;
  color: rgb(255,117,0);
  font-size: 6.5vw;
  }
.small{
  font-size: 3.2vw;
}
.contText{ 
  width: 55%; 
  float: left;
  margin-left: 3.5%;
  font-size: 3.1vw;
  }
.text{
  display: block;
  }
.style{
  font-size: 4vw;
  color: #333;
  margin-top: 30rpx;
  margin-bottom: 10rpx;
}
.contImg{ 
  width: 21.5%; 
  float: left;
  }
.contImg image{
  display: block;
  width: 76%;
  height: 45rpx;
  margin:30% auto;

}
.line{ 
  display: block;
  width: 80%; 
  height:2rpx;
  position: absolute;
  top:19vw;
  left: 5vw;
  }
  .footerText{
    position: absolute;
    top: 21.5vw;
    width: 90vw;
    left: 5vw;
    height: 30rpx;
    line-height: 30rpx;
    font-size: 3.3vw;
  }
  .no-use{
    width: 40%;
    height: 30px;
    line-height: 30px;
    color: #fff;
    text-align: center;
    margin:20% auto;
    background: rgb(255,117,0);
    border-radius: 5px;
    font-size: 14px;
  }
  #useless{
  color: #ccc;
  }
.payIcon image{
  display: flex;
  width: 250rpx;
  height: 170rpx;
  margin:45% auto 5%;
}
.nopayInfotext{
  color: rgb(73,79,97);
  font-size: 15px;
  text-align: center;
}
.no{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #fff;
}
.unitPrice{
  font-size: 10px;
  position: absolute;
  top: 10px;
  left: 5px;
}