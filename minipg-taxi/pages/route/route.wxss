/* pages/route/route.wxss */
.route{
  width: 100vw;
display: flex;
flex-direction: column;
align-items: center;
justify-content: center;
padding-top: 20rpx;
font-family: PingFangSC-Regular;
}
.fff{
  background: #fff;
}
.TaxiRideList1{
    height: 100vh;
}
.TaxiRideList{
  width: 730rpx;
  /* height: 280rpx; */
  margin: 0 auto;
  background: #fff;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  box-shadow: 0rpx 2rpx 2rpx rgba(0,0,0,0.1);

}
.route-item1{
display: flex;
flex-direction: row;
align-items: center;
justify-content: flex-start;
padding-top: 12rpx;
margin-bottom: 24rpx;
}
.route-item1 image{
width: 90rpx;
height: 90rpx;
margin-left: 24rpx;
}
.route-item1 .route-item1-info{
display: flex;
flex-direction: column;
margin-left: 20rpx;
color: #333333;
font-size: 32rpx;
}
.route-item1 view text:nth-child(2){
color: #999999;
font-size: 28rpx;
}
.route-date{

}
.route-name{
color: #999999;
font-size: 28rpx;
}
.route-item1 .route-sex{
  width: 24rpx;
  height: 24rpx;
}
.route-item2{
color: #333333;
font-size: 28rpx;
display: flex;
flex-direction: row;
justify-content: space-between;
align-items: center;
padding: 0 30rpx;
margin-bottom: 16rpx;
  padding-bottom: 10rpx;
  box-sizing: border-box;
}
.route-item2 image{
  width: 20rpx;
  height: 20rpx;
   margin-right: 14rpx; 
}
.route-start text,.route-end text{
  display: inline-block;
  width: 65vw;
  height: 40rpx;
   white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  vertical-align: bottom;
}
.route-status{
font-size: 28rpx;
color:rgb(255,117,0);
}
.route-item3{
height: 60rpx;
background: rgb(250,250,250);
font-size: 26rpx;
color: #999999;
padding-left: 30rpx;
line-height: 60rpx;
}

.noroute{
    width: 100vw;
  position: absolute;
  top:0;
  height: 100vh;
}
.noroute image{
width: 200rpx;
height: 170rpx;
position: absolute;
top: 35%;
left: 50%;
margin-left: -100rpx;
/* margin: 400rpx auto 34rpx;
margin-left: 20rpx; */
}
.noroute .noroutetext{
  width: 100%;
  text-align: center;
position: absolute;
top: 50%;
left: 0%;
color: #666;
font-size: 34rpx;
}
