@import '../login/login.wxss';

.wrap {
  width: 100vw;
  height: 100vh;
  background: #fff;
  overflow: hidden;
}

.logintext {
  width: 100%;
  height: 184rpx;
  display: block;
  font-size: 48rpx;
  color: rgb(41, 45, 57);
  text-align: left;
  line-height: 184rpx;
  padding-left: 30rpx;
  box-sizing: border-box;
}

.confirm {
  border-bottom: 1px solid rgb(229, 229, 229);
  border-top: 1px solid rgb(229, 229, 229);
}

.info {
  width: 100%;
  position: relative;
  height: 88rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 34rpx;
  color: rgb (41, 45, 57);
  margin-left: 30rpx;
  justify-content: flex-start;
}

.Country {
  border-bottom: 1px solid rgb(229, 229, 229);
}

.Country image {
  width: 16rpx;
  height: 26rpx;
}

.input {
  color: rgb (41, 45, 57);
  padding-left: 30rpx;
}

.input :placeholder {
  color: rgb(178, 178, 178);
}

.getCode {
  width: 156rpx;
  height: 48rpx;
  background: #fff;
  font-size: 26rpx;
  line-height: 48rpx;
  padding: 0;
}

.zone, .code {
  height: 88rpx;
  width: 150rpx;
  line-height: 88rpx;
}

.zone {
  border-right: 1px solid rgb(229, 229, 229);
}

.border {
  width: 260rpx;
}

.login {
  width: 90%;
  margin: 120rpx auto;
}
