page{

  font-family: 'PingFangSC-Regular'
}
.tip{
  width: 100%;
  height: 46rpx;
  text-align: center;
  font-size: 12px;
  color: rgb(255, 122, 63);
  margin-bottom: 10px;
    background-color: #fff;
}
.reasonCon{
    display: flex;
  flex-direction: column;
  align-items: center;
    color: #666;
  font-size: 16px;
  
}
.reasonList{
    background-color: #fff;
    width:100%;
      display: flex;
       flex-direction: column;
  align-items: center;
}
.reasonItem{
  width:90%;
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center
}


.more{
background: #fff;
   width:100%;
      display: flex;
       flex-direction: column;
  align-items: center;
  padding-bottom: 20rpx
}
.more text{
  display: block;
  width:90%;
  height: 80rpx;
  line-height: 80rpx;

}

.extra{
  width: 90%;  height: 160rpx;
  line-height: 80rpx;
  box-sizing: border-box;
  border: 1px solid #ccc;
  border-radius: 5px;
  padding-left: 10rpx;
}
.confirm{
  width: 100%;
  height: 110rpx;
  background: #fff;
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}
.confirm button{
  width: 90%;
  background-color: rgb(255, 122, 63);
  border: none;
  font-size: 17px;
  color: #fff;
}